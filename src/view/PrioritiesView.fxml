<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.PrioritiesController"
      spacing="15" alignment="CENTER" prefWidth="400" prefHeight="400"
      style="-fx-padding: 20; -fx-background-color: #f4f4f4; -fx-border-color: #d1d1d1; -fx-border-radius: 10; -fx-background-radius: 10;">

    <!-- Title Label -->
    <Label text="Manage Priorities"
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2a2a2a;" />

    <!-- ListView for displaying priorities -->
    <ListView fx:id="priorityListView"
              prefHeight="250"
              style="-fx-border-color: #c1c1c1; -fx-border-radius: 5;" />

    <!-- HBox for TextField and Add Button -->
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="txtPriorityName"
                   promptText="Enter new priority"
                   style="-fx-pref-width: 200; -fx-padding: 5; -fx-border-radius: 5;" />
        <Button text="Add Priority"
                onAction="#onAddPriority"
                style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5;" />
    </HBox>

    <!-- Instructional Label -->
    <Label text="Select one of the priorities above to manage them."
           style="-fx-font-weight: bold; -fx-text-fill: #555555; -fx-padding: 5;" />

    <!-- HBox for Edit and Delete Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="Edit Priority"
                onAction="#onEditPriority"
                style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5;" />
        <Button text="Delete Priority"
                onAction="#onDeletePriority"
                style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5;" />
    </HBox>

</VBox>
